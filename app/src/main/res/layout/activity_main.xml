<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="MissingConstraints"
        android:gravity="center"
        android:orientation="vertical">


        <ImageView
            android:layout_width="96dp"
            android:layout_height="98dp"
            android:background="@drawable/logo" />



        <android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/swiperefresh"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="10dp"
            app:layout_constraintBottom_toTopOf="@+id/recibirData"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0">


            <ListView
                android:id="@+id/lista"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                app:layout_constraintBottom_toTopOf="@+id/recibirData"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.913" />

        </android.support.v4.widget.SwipeRefreshLayout>

       <!--<Button
            android:id="@+id/recibirData"

            android:text="Actualizar"

            android:textColor="#FFFFFF"
            android:textSize="15dp"
            android:textStyle="bold"

            android:layout_width="120dp"
            android:layout_height="50dp"
            android:background="@drawable/buttonshape"
            />-->
        <com.spark.submitbutton.SubmitButton
            android:textSize="10dp"
            android:id="@+id/recibirData"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Actualizar"
            android:textColor="@color/white"
            app:sub_btn_background="#10FFFFFF"
            app:sub_btn_duration="1000"
            app:sub_btn_line_color="@color/white"
            app:sub_btn_ripple_color="#000"
            app:sub_btn_tick_color="#000" />

        <com.spark.submitbutton.SubmitButton
            android:layout_marginTop="-30dp"
            android:layout_marginBottom="-30dp"
            android:textSize="10dp"
            android:id="@+id/logOut"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Salir"
            android:textColor="@color/white"
            app:sub_btn_background="#10FFFFFF"
            app:sub_btn_duration="3000"
            app:sub_btn_line_color="@color/white"
            app:sub_btn_ripple_color="#000"
            app:sub_btn_tick_color="#000" />
